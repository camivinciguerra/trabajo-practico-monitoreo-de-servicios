<h1>Cierre de incidentes</h1>
<br>
<br>
<form id="formulario-incidentes" method="post" action="/incidentes/cerrar">
    <div class="row">
        <div class="col-md-7">
            <!-- Contenido de la columna izquierda -->
            <div class="col-md-6">
                <h4>Seleccione comunidad *</h4>
                <label for="comunidades" class="form-label"></label>
                <select id="comunidades" class="form-select" name="comunidades">
                    {{#each comunidades}}
                        <option value="{{this.getNombre}}">{{this.getNombre}}</option>
                    {{/each}}
                </select>
            </div>
            <br>
            <div class="col-md-6">
                <h4>Seleccione establecimiento *</h4>
                <label for="establecimientos" class="form-label"></label>
                <select id="establecimientos" class="form-select" name="establecimientos">
                    {{#each establecimientos}}
                        <option value="{{this.getNombre}}">{{this.getNombre}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
    <br>
    <br>
    <div class="carga-archivo">
        <div class="d-flex justify-content-center align-items-right">
            <div class="boton-unirme">
                <button type="button" class="btn btn-primary btn-block" id="boton-apertura-incidente">SIGUIENTE</button>
            </div>
        </div>
    </div>
</form>

<div class = "boton-atras" id = "div-atras-id">
    <a href="/inicio">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="rgb(7,143,201)" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
