<!DOCTYPE html>
<html lang="es">
<head>
    <title>Perfil</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <style>
        .profile-container {
            display: flex;
            align-items: center;
            margin-right: 500px; /* Ajusta el margen derecho según sea necesario */
        }

        .profile-container h1 {
            margin-left: 10px; /* Ajusta el margen izquierdo según sea necesario */
        }

        @font-face {
            font-family: 'Lexend Deca';
            src: url('/archivosExtra/tipografias/LexendDeca-Regular.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        .boton-atras {
            position: fixed;
            bottom: 10px; /* Ajusta la distancia desde la parte inferior según sea necesario */
            left: 10px; /* Ajusta la distancia desde la izquierda según sea necesario */
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        body{
            font-family: 'Lexend Deca';
        }

        h5{
            font-family: 'Lexend Deca';
        }

        html{
            font-family: 'Lexend Deca';
        }

    </style>
</head>
<body>

<nav class="navbar navbar-dark fixed-top" style="background-color: #078FC9;">
    <div class="container-fluid">
        <a class="navbar-brand" href="/inicio" style="background-color: #078FC9;">Monitoreo de Estado de Servicios de Transporte Publico y de Establecimientos</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel" style="background-color: #078FC9;">
            <div class="offcanvas-header" style="background-color: #078FC9;">
                <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu principal</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close" style="background-color: #078FC9;"></button>
            </div>
            <div class="offcanvas-body" style="background-color: #078FC9;">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/inicio">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/perfil">Mi perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/mis-comunidades">Mis comunidades</a>
                    </li>
                    {{#if persona.isAdmin}}
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/establecimientos">Crear Establecimientos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/usuarios">Administrar usuarios</a>
                        </li>
                    {{/if}}
                    <li class="nav-item">
                        <a class="nav-link" id="id-link-logout" href="/" onclick="cerrarSesion()">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<br>
<br>
<br>
<br>
<div class="profile-container" style="margin-left: 40px;">
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" style="color: #078FC9;">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
    </svg>
    <h1 style="color: #078FC9;">Mi perfil</h1>
</div>
<br>
<br>
<table class="table" style="margin-left: 30px; margin-right: 35px;">
    <thead>
    </thead>
    <tbody>
    <tr>
        <th scope="row">Nombre y apellido</th>

        <td>{{persona.getNombreApellido}}</td>
    </tr>
    <tr>
        <th scope="row">Mail de contacto</th>
        <td>{{persona.getMailDeContacto}}</td>
    </tr>
    <tr>
        <th scope="row">Teléfono de contacto</th>
        <td>{{persona.getNumeroDeContacto}}</td>
    </tr>
    <tr>
        <th scope="row">Estrategia de notificación</th>
        <td>{{persona.getEstrategiaString}}</td>
    </tr>
    <tr>
        <th scope="row">Ubicación</th>
        <td>{{persona.getProvincia.getNombre}}</td>
    </tr>
    </tbody>
    <br>
    <br>
</table>
<br>
<br>
<div class="botones" style="display: flex; justify-content: flex-end;">
    <button class="btn btn-primary" type="submit" style="background-color: #078FC9; border-color:#078FC9; margin-right: 10px;"><a class="nav-link active" aria-current="page" href="/ubicacion"> Informar cambio de ubicación</a> </button>
</div>

<div class = "boton-atras" id = "div-atras-id">
    <a href="/inicio">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="rgb(7,143,201)" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"/>
        </svg>
    </a>
</div>

<script>
    function cerrarSesion(){
        fetch('/usuario/cerrarSesion',{method:'POST'}).
        then(function(response){
            if(response.ok){
                console.log("Sesion cerrada");
            }
            else{
                throw "Error en llamada Ajax";
            }
        });
    }
</script>

</body>


</html>